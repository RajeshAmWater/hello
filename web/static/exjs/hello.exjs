defmodule Hello do
  def init() do
    JS.new Phaser.Game, [800, 600, Phaser.CANVAS, "phaser", %{ "create" => &create/1 }]
  end


  def create(game) do
    text = "Hello"
    style = %{ "font" => "65px Arial", "fill" => "#ff0044", "align" => "center" }

    game.add.text(game.world.centerX - 300, 0, text, style);
  end
end
